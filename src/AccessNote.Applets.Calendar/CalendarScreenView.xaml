<UserControl x:Class="AccessNote.CalendarScreenView"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="Calendar"
               FontSize="36"
               FontWeight="Bold"
               Foreground="{DynamicResource ThemeHeaderForeground}"
               Margin="0,0,0,14"
               AutomationProperties.Name="Calendar Header" />

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="3*" />
      </Grid.ColumnDefinitions>

      <!-- Left pane: Calendar grid -->
      <Border Grid.Column="0"
              Margin="0,0,12,0"
              Padding="12"
              Background="{DynamicResource ThemeEditorBackground}"
              BorderBrush="{DynamicResource ThemeStatusBorder}"
              BorderThickness="1"
              AutomationProperties.Name="Calendar Grid Region">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <TextBlock x:Name="MonthYearHeader"
                     Grid.Row="0"
                     FontSize="24"
                     FontWeight="SemiBold"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,8"
                     AutomationProperties.Name="Month and year" />

          <Grid Grid.Row="1" Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Sun" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
            <TextBlock Grid.Column="1" Text="Mon" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
            <TextBlock Grid.Column="2" Text="Tue" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
            <TextBlock Grid.Column="3" Text="Wed" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
            <TextBlock Grid.Column="4" Text="Thu" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
            <TextBlock Grid.Column="5" Text="Fri" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
            <TextBlock Grid.Column="6" Text="Sat" FontSize="16" Foreground="{DynamicResource ThemeForeground}" HorizontalAlignment="Center" />
          </Grid>

          <ListBox x:Name="DayCellsList"
                   Grid.Row="2"
                   FontSize="20"
                   Foreground="{DynamicResource ThemeForeground}"
                   Background="{DynamicResource ThemeMenuBackground}"
                   BorderBrush="{DynamicResource ThemeBorder}"
                   BorderThickness="1"
                   FocusVisualStyle="{x:Null}"
                   AutomationProperties.Name="Calendar days">
            <ListBox.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Columns="7" />
              </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
              <Style TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="MinHeight" Value="36" />
              </Style>
            </ListBox.ItemContainerStyle>
          </ListBox>
        </Grid>
      </Border>

      <!-- Right pane: Events for selected date -->
      <Border Grid.Column="1"
              Margin="12,0,0,0"
              Padding="12"
              Background="{DynamicResource ThemeEditorBackground}"
              BorderBrush="{DynamicResource ThemeStatusBorder}"
              BorderThickness="1"
              AutomationProperties.Name="Events Region">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <TextBlock x:Name="SelectedDateText"
                     Grid.Row="0"
                     FontSize="20"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,8"
                     AutomationProperties.Name="Selected date" />

          <ListBox x:Name="EventsList"
                   Grid.Row="1"
                   FontSize="20"
                   Foreground="{DynamicResource ThemeForeground}"
                   Background="{DynamicResource ThemeMenuBackground}"
                   BorderBrush="{DynamicResource ThemeBorder}"
                   BorderThickness="1"
                   FocusVisualStyle="{x:Null}"
                   AutomationProperties.Name="Events list">
            <ListBox.ItemContainerStyle>
              <Style TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Padding" Value="8" />
                <Setter Property="AutomationProperties.Name" Value="{Binding DisplayText}" />
              </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding DisplayText}" />
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>

          <TextBlock x:Name="EventDetailText"
                     Grid.Row="2"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     TextWrapping="Wrap"
                     Margin="0,8,0,0"
                     AutomationProperties.Name="Event details" />
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>
