<UserControl x:Class="AccessNote.AppLauncherScreenView"
             x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Text="App Launcher"
               FontSize="36"
               FontWeight="Bold"
               Foreground="{DynamicResource ThemeHeaderForeground}"
               Margin="0,0,0,14"
               AutomationProperties.Name="App Launcher Header" />

    <TextBlock x:Name="ModeText"
               Grid.Row="1"
               Text="Favorites"
               FontSize="20"
               Foreground="{DynamicResource ThemeForeground}"
               Margin="0,0,0,8"
               AutomationProperties.Name="Current mode" />

    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="3*" />
      </Grid.ColumnDefinitions>

      <Border Grid.Column="0"
              Margin="0,0,12,0"
              Padding="12"
              Background="{DynamicResource ThemeEditorBackground}"
              BorderBrush="{DynamicResource ThemeStatusBorder}"
              BorderThickness="1"
              AutomationProperties.Name="App List Region">
        <ListBox x:Name="AppList"
                 FontSize="22"
                 Foreground="{DynamicResource ThemeForeground}"
                 Background="{DynamicResource ThemeMenuBackground}"
                 BorderBrush="{DynamicResource ThemeBorder}"
                 BorderThickness="1"
                 FocusVisualStyle="{x:Null}"
                 AutomationProperties.Name="App List">
          <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
              <Setter Property="HorizontalContentAlignment" Value="Stretch" />
              <Setter Property="Padding" Value="10" />
            </Style>
          </ListBox.ItemContainerStyle>
        </ListBox>
      </Border>

      <Border Grid.Column="1"
              Margin="12,0,0,0"
              Padding="12"
              Background="{DynamicResource ThemeEditorBackground}"
              BorderBrush="{DynamicResource ThemeStatusBorder}"
              BorderThickness="1"
              AutomationProperties.Name="Details Region">
        <StackPanel>
          <TextBlock Text="Details"
                     FontSize="20"
                     FontWeight="Bold"
                     Foreground="{DynamicResource ThemeHeaderForeground}"
                     Margin="0,0,0,12"
                     AutomationProperties.Name="Details header" />

          <TextBlock Text="Name:"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,4" />
          <TextBlock x:Name="DetailName"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,12"
                     AutomationProperties.Name="Selected app name" />

          <TextBlock Text="Path:"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,4" />
          <TextBlock x:Name="DetailPath"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     TextWrapping="Wrap"
                     Margin="0,0,0,12"
                     AutomationProperties.Name="Selected app path" />

          <TextBlock Text="Arguments:"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,4" />
          <TextBlock x:Name="DetailArguments"
                     FontSize="18"
                     Foreground="{DynamicResource ThemeForeground}"
                     Margin="0,0,0,0"
                     AutomationProperties.Name="Selected app arguments" />
        </StackPanel>
      </Border>
    </Grid>

    <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                Margin="0,12,0,0">
      <Button x:Name="AddButton"
              Content="Add"
              FontSize="18"
              Padding="12,6"
              Margin="0,0,8,0"
              Foreground="{DynamicResource ThemeForeground}"
              Background="{DynamicResource ThemeMenuBackground}"
              BorderBrush="{DynamicResource ThemeBorder}"
              AutomationProperties.Name="Add favorite" />
      <Button x:Name="RemoveButton"
              Content="Remove"
              FontSize="18"
              Padding="12,6"
              Margin="0,0,8,0"
              Foreground="{DynamicResource ThemeForeground}"
              Background="{DynamicResource ThemeMenuBackground}"
              BorderBrush="{DynamicResource ThemeBorder}"
              AutomationProperties.Name="Remove favorite" />
      <Button x:Name="LaunchButton"
              Content="Launch"
              FontSize="18"
              Padding="12,6"
              Foreground="{DynamicResource ThemeForeground}"
              Background="{DynamicResource ThemeMenuBackground}"
              BorderBrush="{DynamicResource ThemeBorder}"
              AutomationProperties.Name="Launch app" />
    </StackPanel>
  </Grid>
</UserControl>
