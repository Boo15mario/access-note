<Window x:Class="AccessNote.AddFavoriteDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Favorite"
        Width="760"
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Loaded="OnLoaded">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="Add to favorites"
               FontSize="28"
               FontWeight="Bold"
               AutomationProperties.Name="Add favorite header" />

    <TextBlock x:Name="SelectionSummaryText"
               Grid.Row="1"
               Margin="0,12,0,12"
               FontSize="18"
               TextWrapping="Wrap"
               AutomationProperties.Name="Current selection summary" />

    <TextBlock Grid.Row="2"
               Text="Choose how to add the favorite:"
               FontSize="18"
               VerticalAlignment="Top"
               AutomationProperties.Name="Add favorite instructions" />

    <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,16,0,0">
      <Button x:Name="UseSelectionButton"
              Content="Use current selection"
              MinWidth="230"
              Height="48"
              Margin="0,0,10,0"
              FontSize="18"
              Click="OnUseSelectionClick"
              AutomationProperties.Name="Use current selection" />
      <Button x:Name="BrowseButton"
              Content="Browse..."
              MinWidth="150"
              Height="48"
              Margin="0,0,10,0"
              FontSize="18"
              Click="OnBrowseClick"
              AutomationProperties.Name="Browse for app" />
      <Button Content="Cancel"
              MinWidth="130"
              Height="48"
              FontSize="18"
              IsCancel="True"
              Click="OnCancelClick"
              AutomationProperties.Name="Cancel add favorite" />
    </StackPanel>
  </Grid>
</Window>
