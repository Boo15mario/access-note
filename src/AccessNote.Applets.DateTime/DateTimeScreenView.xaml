<UserControl x:Class="AccessNote.DateTimeScreenView"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border Padding="12"
          Background="{DynamicResource ThemeEditorBackground}"
          BorderBrush="{DynamicResource ThemeStatusBorder}"
          BorderThickness="1"
          AutomationProperties.Name="Date and Time Region">
    <StackPanel>
      <TextBlock Text="Date &amp; Time"
                 FontSize="36"
                 FontWeight="Bold"
                 Foreground="{DynamicResource ThemeHeaderForeground}"
                 Margin="0,0,0,14"
                 AutomationProperties.Name="Date and Time Header" />

      <TextBlock x:Name="DateText"
                 FontSize="24"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="Current date" />

      <TextBlock x:Name="TimeText"
                 FontSize="24"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="Current time" />

      <TextBlock x:Name="WeekText"
                 FontSize="20"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,0"
                 AutomationProperties.Name="Week number and timezone" />
    </StackPanel>
  </Border>
</UserControl>
