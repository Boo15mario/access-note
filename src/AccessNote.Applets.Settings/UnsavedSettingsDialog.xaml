<Window x:Class="AccessNote.UnsavedSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unsaved Settings"
        Width="640"
        Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Loaded="OnLoaded"
        PreviewKeyDown="OnPreviewKeyDown">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock x:Name="PromptText"
               Grid.Row="0"
               TextWrapping="Wrap"
               FontSize="24"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               TextAlignment="Center"
               AutomationProperties.Name="Unsaved settings prompt"
               Text="Settings have unsaved changes. Save before leaving Settings?" />

    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,0">
      <Button x:Name="SaveButton"
              Content="Save"
              Width="150"
              Height="54"
              Margin="0,0,12,0"
              FontSize="21"
              IsDefault="True"
              Click="OnSaveClick"
              AutomationProperties.Name="Save settings changes" />
      <Button x:Name="DiscardButton"
              Content="Discard"
              Width="150"
              Height="54"
              Margin="0,0,12,0"
              FontSize="21"
              Click="OnDiscardClick"
              AutomationProperties.Name="Discard settings changes" />
      <Button x:Name="CancelButton"
              Content="Cancel"
              Width="150"
              Height="54"
              FontSize="21"
              IsCancel="True"
              Click="OnCancelClick"
              AutomationProperties.Name="Cancel settings navigation" />
    </StackPanel>
  </Grid>
</Window>
