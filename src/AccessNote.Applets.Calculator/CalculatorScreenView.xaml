<UserControl x:Class="AccessNote.CalculatorScreenView"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border Padding="12"
          Background="{DynamicResource ThemeEditorBackground}"
          BorderBrush="{DynamicResource ThemeStatusBorder}"
          BorderThickness="1"
          AutomationProperties.Name="Calculator Region">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <TextBlock Text="Calculator"
                 FontSize="36"
                 FontWeight="Bold"
                 Foreground="{DynamicResource ThemeHeaderForeground}"
                 Margin="0,0,0,14"
                 AutomationProperties.Name="Calculator Header" />

      <TextBlock x:Name="ModeText"
                 Grid.Row="1"
                 Text="Basic"
                 FontSize="20"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="Calculator mode" />

      <TextBox x:Name="ExpressionBox"
               Grid.Row="2"
               IsReadOnly="True"
               FontSize="24"
               Foreground="{DynamicResource ThemeForeground}"
               Background="{DynamicResource ThemeEditorBackground}"
               BorderBrush="{DynamicResource ThemeStatusBorder}"
               BorderThickness="1"
               Margin="0,0,0,8"
               Padding="8"
               AutomationProperties.Name="Expression" />

      <TextBlock x:Name="ResultText"
                 Grid.Row="3"
                 FontSize="28"
                 FontWeight="Bold"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,12"
                 AutomationProperties.Name="Result" />

      <ListBox x:Name="HistoryList"
               Grid.Row="4"
               FontSize="20"
               Foreground="{DynamicResource ThemeForeground}"
               Background="{DynamicResource ThemeMenuBackground}"
               BorderBrush="{DynamicResource ThemeBorder}"
               BorderThickness="1"
               FocusVisualStyle="{x:Null}"
               AutomationProperties.Name="Calculation History" />
    </Grid>
  </Border>
</UserControl>
