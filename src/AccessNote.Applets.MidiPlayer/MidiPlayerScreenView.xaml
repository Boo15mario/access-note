<UserControl x:Class="AccessNote.MidiPlayerScreenView"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border Padding="12"
          Background="{DynamicResource ThemeEditorBackground}"
          BorderBrush="{DynamicResource ThemeStatusBorder}"
          BorderThickness="1"
          AutomationProperties.Name="MIDI Player Region">
    <StackPanel>
      <TextBlock Text="MIDI Player"
                 FontSize="36"
                 FontWeight="Bold"
                 Foreground="{DynamicResource ThemeHeaderForeground}"
                 Margin="0,0,0,14"
                 AutomationProperties.Name="MIDI Player Header" />

      <TextBlock x:Name="FileNameText"
                 Text="No file loaded"
                 FontSize="24"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="MIDI file name" />

      <TextBlock x:Name="PlaybackStateText"
                 Text="Stopped"
                 FontSize="24"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="Playback state" />

      <TextBlock x:Name="ProgressText"
                 Text="0:00 / 0:00"
                 FontSize="20"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="Playback progress" />

      <TextBlock x:Name="TempoText"
                 Text="Tempo: 120 BPM"
                 FontSize="20"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,8"
                 AutomationProperties.Name="Tempo" />

      <TextBlock x:Name="SoundFontText"
                 Text="SoundFont: Windows MIDI"
                 FontSize="20"
                 Foreground="{DynamicResource ThemeForeground}"
                 Margin="0,0,0,0"
                 AutomationProperties.Name="Active SoundFont" />
    </StackPanel>
  </Border>
</UserControl>
